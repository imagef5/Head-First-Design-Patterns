<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DJView.Views.BeatView">
	<ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="beatBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                         VerticalOptions="Center"/>
            <Label Text="Current BPM : " Grid.Row="1" Grid.Column="0" />
            <Label x:Name="currentBPM" Grid.Row="1" Grid.Column="1" />
        </Grid>
	</ContentView.Content>
</ContentView>
